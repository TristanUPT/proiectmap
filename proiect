#include <stdio.h>
using namespace std;
void hanoi(int n, char A, char C) {
if (n==1) {
cout << "Muta discul 1 de la tija "<<A<<" pe tija"
<<  C <<endl;
return;
}
hanoi(n-1, A, C, B);
cout<< "Muta discul " << n << " de pe tija " << A << " pe tija " << C << endl;
hanoi(n-1, B, A, C);
}
int main() {
    int n = 3;
int choice;
do {
        cout << "Meniu:\n";
        cout << "1. Rezolva problema Turnurilor din Hanoi\n";
        cout << "0. Iesire\n";
        cout << "Alegeti optiunea: ";
        cin >> choice;

switch (choice){
case 1:
cout <<"Introduceti numarul de discuri: ";
cin >> n;
    for (int i = 0; i < n; i++) 
        cout << "Pasul " << i + 1 << ":" << endl;
        hanoi(i + 1, 'A', 'B', 'C');
        cout << endl;
    }
break;
    return 0;
}
